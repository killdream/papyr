!!!5
html
  head
    meta(charset="utf-8")
    title #{project} — Papyr°
    link(rel="stylesheet", href="media/css/screen.css")
    link(rel="stylesheet", href="vendor/google-code-prettify/styles/sunburst.css")
  body
    #header
      .constrained
        h1#logo= project
          em.version= version
        #search-panel
          .field.search-field
            input#search-query(type="text",
                               name="q",
                               placeholder="Search by name, type or text...")
            i.icon.icon-at-right.entypo-search

    #screen
      ul#viewport.constrained
        li#entity-list.context.active

    #footer
      .constrained
        #papyr-info
          h4.application Papyr°
            em powered
          .small.copy-info= copyright

    script(src="vendor/google-code-prettify/prettify.js")
    script(src="media/lib/papyr.js")
    script(src="api.jsonp")
            
          
                               
        